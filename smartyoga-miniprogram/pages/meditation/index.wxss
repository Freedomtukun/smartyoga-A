.container {
  display: flex;
  flex-direction: column; /* Changed to column for main layout */
  flex: 1;
  background-color: #FAFAFA;
  /* For full page flex, might need height: 100vh and box-sizing */
  height: 100vh;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 16px;
  padding-bottom: 16px;
  background-color: #FFF;
  border-bottom-width: 1px;
  border-bottom-style: solid; /* Added for border to show */
  border-bottom-color: #E2E8F0;
}

.backButton {
  padding: 8px;
  /* Adjust size if needed, WXSS doesn't have direct size prop for text */
}

.backButtonText {
  font-size: 24px; /* Default size for icon */
  color: #2D3748;
}

.headerTitle {
  flex: 1;
  font-size: 18px;
  font-weight: 600;
  color: #2D3748;
  text-align: center;
}

.placeholder {
  width: 40px; /* For spacing as in original */
  height: 24px; /* Ensure it has some height for alignment if needed */
}

.content {
  display: flex; /* Added */
  flex-direction: column; /* Added */
  flex: 1;
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 20px;
  padding-bottom: 20px; /* Added for overall spacing */
  box-sizing: border-box; /* Ensure padding doesn't expand beyond flex */
}

.meditationImageContainer {
  height: 200px;
  border-radius: 16px;
  overflow: hidden;
  margin-bottom: 32px;
  background-color: #F7FAFC;
}

.meditationImage {
  width: 100%;
  height: 100%;
}

.meditationInfo {
  margin-bottom: 40px;
}

.title {
  font-size: 24px;
  font-weight: 600;
  color: #2D3748;
  margin-bottom: 16px;
  text-align: center;
}

.description {
  font-size: 16px;
  line-height: 1.5; /* WXSS uses number or unit */
  color: #4A5568;
  margin-bottom: 24px;
  text-align: center;
}

.instructions {
  background-color: #F7FAFC;
  padding: 20px;
  border-radius: 12px;
}

.instructionTitle {
  font-size: 16px;
  font-weight: 600;
  color: #2D3748;
  margin-bottom: 12px;
}

.instructionText {
  font-size: 14px;
  color: #4A5568;
  margin-bottom: 8px;
  line-height: 1.4; /* WXSS uses number or unit */
}

.controls {
  display: flex; /* Added to center button */
  flex-direction: column; /* Added to center button */
  align-items: center;
  padding-bottom: 40px;
}

.meditationButton {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #8B5CF6;
  padding-top: 20px;
  padding-bottom: 20px;
  padding-left: 40px;
  padding-right: 40px;
  border-radius: 50px;
  /* gap: 12px; WXSS does not support gap, use margin on children */
  min-width: 200px;
}

.meditationButtonIcon {
  font-size: 32px;
  color: #FFF;
  margin-right: 12px; /* Replaces gap */
}

.meditationButtonText {
  font-size: 18px;
  font-weight: 600;
  color: #FFF;
}

.meditationButtonActive {
  background-color: #7C3AED;
}
