/* 仅保留体式展示和播放控制的基本样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #FAFAFA;
}

.header {
  display: flex;
  align-items: center;
  padding: 16px 20px;
  background-color: #FFF;
  border-bottom: 1px solid #E2E8F0;
}
.backButton {
  padding: 8px;
}
.backButtonText {
  font-size: 24px;
  color: #2D3748;
}
.headerTitle {
  flex: 1;
  text-align: center;
  font-size: 17px;
  font-weight: 600;
  color: #2D3748;
}
.placeholderView {
  width: 40px;
  height: 24px;
}

.poseContainer {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}
.poseImg {
  width: 100%;
  max-width: 360px;
  margin-bottom: 16px;
}
.poseName {
  font-size: 24px;
  font-weight: bold;
  color: #2D3748;
  margin-bottom: 10px;
}
.poseInstructions {
  font-size: 15px;
  line-height: 1.6;
  color: #4A5568;
  text-align: center;
  margin-bottom: 15px;
}
.timerText {
  font-size: 36px;
  font-weight: bold;
  color: #8B5CF6;
  margin-bottom: 20px;
}

.controlsContainer {
  display: flex;
  justify-content: space-around;
  padding: 20px;
  background-color: #FFF;
  border-top: 1px solid #E2E8F0;
}
.controlButton {
  padding: 15px 25px;
  background-color: #F0F0F0;
  border-radius: 30px;
}
.controlButtonText {
  font-size: 20px;
  color: #333;
}
.controlButton:first-child {
  background-color: #8B5CF6;
}
.controlButton:first-child .controlButtonText {
  color: #FFF;
}
